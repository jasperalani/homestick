{
  "restartable": "rs",
  "ignore": [
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "kill-port 3000",
    "crash": "kill-port 3000"
  },
  "delay": "1500",
  "watch": [
    "*.js"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}